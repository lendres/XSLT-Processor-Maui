<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:dpcontrols="clr-namespace:DigitalProduction.Maui.Controls;assembly=DigitalProduction.Maui"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

	<Style TargetType="Label" Class="DivisionHeader">
		<Setter Property="FontSize" Value="22"/>
		<Setter Property="FontAttributes" Value="Bold"/>
		<Setter Property="HorizontalOptions" Value="Center"/>
		<Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource Yellow100Accent}, Dark={DynamicResource Yellow100Accent}}"/>
	</Style>

	<Style TargetType="BoxView" Class="DivisionBorder">
		<Setter Property="HeightRequest" Value="3"/>
		<Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource Yellow100Accent}, Dark={DynamicResource Yellow100Accent}}"/>
	</Style>

</ResourceDictionary>